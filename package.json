{
  "name": "mailtrendz-backend",
  "version": "4.0.0",
  "description": "MailTrendz Backend API with Integrated AI Service (OpenRouter) and Stripe",
  "main": "dist/server.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc --noEmitOnError false --skipLibCheck true",
    "start": "node dist/server.js",
    "start:production": "npm run build && npm run start",
    "prepare": "npm run build",
    "initialize-credits": "ts-node scripts/initialize-credits.ts",
    "migrate:monthly-usage": "ts-node scripts/run-monthly-usage-migration.ts",
    "reset-user-usage": "ts-node scripts/reset-user-usage.ts",
    "setup:stripe": "ts-node scripts/setup-stripe.ts",
    "setup-webhooks": "ts-node scripts/setup-webhooks.ts",
    "test-webhooks": "ts-node scripts/test-webhooks.ts",
    "fix-subscription": "ts-node scripts/fix-user-subscription.ts",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "clean:all": "rm -rf dist node_modules logs uploads",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "backend",
    "api",
    "openrouter",
    "email-marketing",
    "html-generator",
    "claude",
    "unified-architecture",
    "stripe",
    "subscriptions"
  ],
  "author": "Gabriel",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.51.0",
    "@types/cheerio": "^0.22.35",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/express-validator": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.8.0",
    "@types/uuid": "^10.0.0",
    "axios": "^1.6.0",
    "cheerio": "^1.1.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "i18next": "^24.0.0",
    "i18next-fs-backend": "^2.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.16.3",
    "stripe": "^18.3.0",
    "typescript": "^5.2.2",
    "uuid": "^11.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.51.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1"
  }
}
